<div class="footer">
  <div class="div-footer">
    <div class= "nav-icone nav-home">
      <%= link_to restaurants_path do %>
        <%= image_tag "home-white.svg" %>
        <p>Accueil</p>
      <% end %>
    </div>
  </div>
  <div class="div-footer">
    <% if current_user %>
      <% if User.where(id: current_user.my_requests_received_ids).count > 0 %>
        <span class="badge">
          <%= User.where(id: current_user.my_requests_received_ids).count %>
        </span>
      <% end %>
    <% end %>
    <div class= "nav-icone nav-friend" id="friendships" >
      <%= link_to new_friendship_path do %>
        <%= image_tag "new-friend-white.svg" %>
        <p>Amis</p>
      <% end %>
    </div>
  </div>
  <div class="div-footer">
    <div class= "nav-icone nav-reco" id="reco_page">
      <%= link_to new_recommendation_path do %>
        <%= image_tag "new-restaurant-white.svg" %>
        <p>Recommande</p>
      <% end %>
    </div>
  </div>
  <div class="div-footer">
    <% if current_user %>
      <% if @notification_count > 0 %>
        <span class="badge">
          <%= @notification_count %>
        </span>
      <% end %>
    <% end %>
    <div class= "nav-icone nav-notif" id="notifs">
      <%= link_to recommendations_path do %>
        <%= image_tag "notif-white.svg" %>
        <p>Notif</p>
      <% end %>
    </div>
  </div>
  <div class="div-footer">
    <div class= "nav-icone nav-profil" id="home">
      <%= link_to user_path(:id) do %>
        <%= image_tag "account-white.svg" %>
        <p>Profil</p>
      <% end %>
    </div>
  </div>
  <script>
    <% if current_user %>
      mixpanel.track_links("#friendships a, p", "friendships", {
          "user": "<%= current_user.name %>", "browser": "<%= browser.name %>"
      });
      mixpanel.track_links("#reco_page a, p", "reco_view", {
          "user": "<%= current_user.name %>", "browser": "<%= browser.name %>"
      });
      mixpanel.track_links("#notifs a, p", "notif_page", {
          "user": "<%= current_user.name %>", "browser": "<%= browser.name %>"
      });
      mixpanel.track_links("#home a, p", "home", {
          "user": "<%= current_user.name %>", "browser": "<%= browser.name %>"
      });
    <% end %>
  </script>
</div>


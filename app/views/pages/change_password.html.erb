<%= form_tag('/users/update_password', method: "post", class: "password_form") do %>
  <input name="user_token" type="hidden" value="<%= params["user_token"] %>" />
  <label for="password">Nouveau mot de passe</label>
  <input id="password" name="password" type="password" minlength="6" />
  <br>
  <label for="password_confirmation">Confirmer votre nouveau mot de passe</label>
  <input id="password_confirmation" name="password_confirmation" type="password" minlength="6" />
  <br>
  <input type="submit" value="Submit">
<% end %>

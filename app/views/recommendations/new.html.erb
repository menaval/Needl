<div id="reco-bg">
  <h1>Ajouter une Recommandation</h1>

  <div class="form-size text-center">
    <%= simple_form_for @recommendation, html: { id: "form-reco"} do |reco| %>

      <%= reco.input :restaurant_id, label: 'Nom du restaurant', placeholder: 'Le nom du resto ...', id="user_input_autocomplete_name"  %>

      <%= reco.input :ambiences, as: :check_boxes, :wrapper_html => { 'data-max' => '2' }, collection:[["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/chic.svg'}</div>Chic".html_safe, 1], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/festif.svg'}</div>Festif".html_safe, 2], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/typique.svg'}</div>Typique".html_safe, 3], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/ensoleille.svg'}</div>Ensoleillé".html_safe, 4], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/fast_and_good.svg'}</div>Fast & Good".html_safe, 5]], input_html: { class: 'multiselectuser', multiple: true}, label: '<h3>Choisis 2 ambiances</h3>'.html_safe, item_wrapper_class: 'simple_form_inline', :include_hidden => false  %>


      <%= reco.input :strengths, as: :check_boxes, :wrapper_html => { 'data-max' => '3' },
      collection:[["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/nourriture.svg'}</div>Nourriture".html_safe, 1], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/service.svg'}</div>Service".html_safe, 2], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/cadre.svg'}</div>Cadre".html_safe, 3], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/original.svg'}</div>Original".html_safe, 4], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/genereux.svg'}</div>Généreux".html_safe, 5], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/vins.svg'}</div>Vins".html_safe, 6], ["<div class='icon-box'>#{render 'restaurants/strengths_and_ambiences/qualite_prix.svg'}</div>Qualité / Prix".html_safe, 7]], input_html: { class: 'multiselectuser', multiple: true}, label: '<h3>Choisis 3 points forts</h3>'.html_safe, item_wrapper_class: 'simple_form_inline', :include_hidden => false  %>

      <%= reco.input :price, label: 'Prix du plat' %>

      <%= reco.input :review, label: 'Mot de la fin (40 caractères max)', maxlength: 40, placeholder: "Un plat à ne pas louper?" %>

      <%= reco.submit("Recommander !", class: "btn btn-danger") %>
    <% end %>
  </div>
</div>

<script type="text/javascript" src="autocomplete.js"></script>

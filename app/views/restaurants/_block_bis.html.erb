<div class="bloc_bis">
  <% block.each do |name,ids|%>
    <div class="row friends-show" id="<%= ambience_or_strength %>-<%= name %>">
      <div class= "col-xs-offset-3 col-xs-1">
        <div class="icon-box">
          <%= render "restaurants/strengths_and_ambiences/#{name}.svg" %>
        </div>
      </div>
      <div class= "col-xs-offset-1 col-xs-5">
        <h3><%= name.capitalize.gsub(/_/," ").gsub(/&/, "and") %></h3>
      </div>
      <div class="col-xs-2">
        <i class="fa fa-sort-desc arrow-desc"></i>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-offset-5 col-xs-7">
        <div class="img-friend-ambiences hidden-friend" id="<%= ambience_or_strength %>-friends-<%= name %>">
          <ul class="list-inline">
           <% ids.each do |id| %>
            <li>
              <%= image_tag User.find(id.to_i).picture.url(:thumb), class: "avatar img-circle img-responsive" %>
            </li>
           <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>
</div>

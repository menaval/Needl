<div>

  <!-- Restaurant About -->

  <%= render "restaurant_profile", restaurant: @restaurant, picture: @picture %>

  <!-- Reservation -->

  <div class="contact-restaurant clearfix">
    <p>Réserver une table</p>
    <%= link_to "Appeler", "tel:#{@restaurant.phone_number}", class: "btn btn-danger", id:"call" %>
  </div>

  <!-- Ambiences -->

  <div id="ambiences">
    <div class="container present">

      <div class= "title">
        <div class="title-middle">Ambiances</div>
      </div>

      <!-- icon -->
          <%= render "block_bis", block: @restaurant.ambiences_from_my_friends(current_user), ambience_or_strength: "ambience" %>
        </div>

    </div>
  </div>

  <!-- Strenght -->

  <div id="strengths">
    <div class="container present">

      <div class= "title">
        <div class="title-middle">Points forts</div>
      </div>
      <%= render "block_bis", block: @restaurant.strengths_from_my_friends(current_user), ambience_or_strength: "strength" %>
    </div>
  </div>


  <!-- Final word -->

  <div id="mots_de_la_fin" class="text-center">
    <div class="container">
      <div class= "title">
        <div class="title-middle">Ils l'ont recommandé</div>
      </div>

      <div class="end-word clearfix slider-nav">
        <% @restaurant.reviews_from_my_friends(current_user).each do |friend_id, content_and_date| %>
          <div class="end-word-people">
            <%= image_tag User.find(friend_id).picture, class: "img-circle avatar img-responsive" %>
          </div>
        <%end%>
      </div>

      <div class="end-word-quote slider-for">
        <% @restaurant.reviews_from_my_friends(current_user).each do |friend_id, content_and_date| %>
          <div>
           <!-- <span class="end-quote-arrow"></span> -->
            <%= content_and_date[0] %>
           <span class="end-quote-name"><%= "#{User.find(friend_id).name.split(" ")[0]} #{User.find(friend_id).name.split(" ")[1].first}."%></span>
          </div>
        <% end %>
      </div>
      <% if Recommendation.where(user_id: current_user.id, restaurant_id: @restaurant.id).length == 0 %>
        <%= link_to "J'approuve", new_recommendation_path(restaurant_id: @restaurant.id, restaurant_origin: 'db', restaurant_name: @restaurant.name), class: 'end-word-button' %>
      <% end %>
    </div>
  </div>

  <!-- Wishlist -->

  <div id="resto-wishlist" class="text-center">
    <div class="container">
      <div class= "title">
        <div class="title-middle"><%= @friends_wishing.length == 0 ? 'Pas encore d\'ami qui veut y aller' : 'Ils ont envie d\'y aller'%></div>
      </div>

      <div class="resto-wishlist-people multiple-carousel">
          <% @friends_wishing.each do |friend_id| %>
          <div>
            <%= image_tag User.find(friend_id).picture, class: "img-circle avatar img-responsive" %>
          </div>
        <% end %>
      </div>
      <% if Wishlist.where(user_id: current_user.id, restaurant_id: @restaurant.id).length == 0 %>
        <%= form_for(@wishlist, class: 'form', html: { id: 'new-wishlist'}) do |f| %>
          <%= f.hidden_field :user_id, value: current_user.id %>
          <%= f.hidden_field :restaurant_id, value: @restaurant.id %>
          <%= f.submit class: "end-word-button", value: "#{@friends_wishing.length == 0 ? 'Je veux y aller !' : 'Moi aussi !'}" %>
        <% end %>
      <% end %>
    </div>
  </div>


  <!-- Location -->

  <div id="basic_infos" class="text-center">
    <div class="container present">

      <div class= "title">
        <div class="title-middle">Lieu</div>
      </div>
      <p><%= @restaurant.address%></p>
      <p class="subway"><span class="subway-icon"></span><%= @subway.name %></p>
    </div>
  </div>

   <!-- Map -->
  <div id="map" style="width: 100%; height: 150px;"></div>


  <!-- Reservation -->

  <div class="contact-restaurant clearfix">
    <p>Réserver une table</p>
    <%= link_to "Appeler", "tel:#{@restaurant.phone_number}", class: "btn btn-danger", id:"call" %>
  </div>


  <!-- Modifer / Supprimer / Retirer -->

  <div class="restaurant-interactions clearfix dark">
    <!-- retirer -->
    <% if Wishlist.where(user_id: current_user.id, restaurant_id: @restaurant.id).length > 0 %>
      <%= link_to wishlist_path(Wishlist.where(user_id: current_user.id, restaurant_id: @restaurant.id).first.id), class: "end-word-button dark", method: :delete do %>
      <span class="button-icon icon-unlike"></span>
      Retirer de mes envies
      <% end %>
    <% end %>

    <% if Recommendation.where(user_id: current_user.id, restaurant_id: @restaurant.id).length > 0 %>
      <!-- modifier -->

      <%= link_to new_recommendation_path(restaurant_id: @restaurant.id, restaurant_origin: 'db', restaurant_name: @restaurant.name), class: 'end-word-button dark' do %>
      <span class="button-icon icon-modify"></span>
      Modifier ma reco
      <% end %>

      <!-- suprrimer -->
      <%= link_to recommendation_path(Recommendation.where(user_id: current_user.id, restaurant_id: @restaurant.id).first.id), class: "end-word-button dark", method: :delete do %>
      <span class="button-icon icon-trash"></span>
      Supprimer ma reco
      <% end %>
    <% end %>
  </div>





  <!-- script -->

  <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js"></script>

  <script type="text/javascript">
    var myLatlng = new google.maps.LatLng(<%= @restaurant.latitude %>, <%= @restaurant.longitude %>);
    var myOptions = {
      zoom: 16,
      disableDefaultUI: true,
      center: myLatlng,
      scrollwheel: false,
      mapTypeId: google.maps.MapTypeId.ROADMAP,
      styles: [{"featureType":"landscape.man_made","elementType":"all","stylers":[{"color":"#949191"},{"lightness":83},{"saturation":"7"}]},{"featureType":"landscape.natural","elementType":"geometry.fill","stylers":[{"lightness":77}]},{"featureType":"poi.park","elementType":"geometry.fill","stylers":[{"color":"#34ad6b"},{"lightness":"40"}]},{"featureType":"poi.school","elementType":"geometry.fill","stylers":[{"lightness":"39"},{"gamma":"0.76"},{"hue":"#fff700"},{"saturation":"67"}]},{"featureType":"poi.sports_complex","elementType":"geometry.fill","stylers":[{"color":"#c15e1f"},{"lightness":"12"},{"saturation":"45"},{"gamma":"2.07"}]},{"featureType":"road.highway","elementType":"geometry","stylers":[{"color":"#f1b127"}]},{"featureType":"water","elementType":"geometry.fill","stylers":[{"color":"#2f78c4"},{"gamma":"1.50"},{"lightness":"12"}]}]
    };
    var map = new google.maps.Map(document.getElementById('map'), myOptions);
    var marker = new google.maps.Marker({
      position: myLatlng,
      map: map
    });

    mixpanel.track_links("#call", "call", {
        "user": "<%= current_user.name %>", "restaurant": "<%= @restaurant.name %>", "browser": "<%= browser.name %>"});
    mixpanel.track_forms("#new-wishlist", "New Wishlist", {"user": "<%= current_user.name %>", "restaurant": "<%= @restaurant.name %>" });
    mixpanel.track("restaurant_page", {"user": "<%= current_user.name %>", "browser": "<%= browser.name %>"});
  </script>

</div>


